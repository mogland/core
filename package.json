{
  "name": "@nx-space/core",
  "version": "1.7.0",
  "description": "The RESTful API service for NEXT Space, more features, powered by @nestjs.",
  "author": "Wibus <https://iucky.cn>",
  "license": "AGPLv3",
  "repository": {
    "directory": "nx-space/core",
    "url": "https://github.com/nx-space/core"
  },
  "homepage": "https://github.com/nx-space/core#readme",
  "issues": "https://github.com/nx-space/core/issues",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "dev": "npm run start",
    "bundle": "echo 'TODO: bundle the project.'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "NODE_ENV=development concurrently --kill-others \"nest start -w core\" \"nest start -w user-service\" ",
    "start:core": "cross-env NODE_ENV=development cross-env NODE_ENV=development nest start -w",
    "start:dev": "nest build --webpack --webpackPath webpack-hmr.config.js --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prod": "cross-env NODE_ENV=production pm2-runtime start ecosystem.config.js",
    "prod:pm2": "cross-env NODE_ENV=production pm2 restart ecosystem.config.js",
    "prod:stop": "pm2 stop ecosystem.config.js",
    "prod:debug": "cross-env NODE_ENV=production nest start --debug --watch",
    "test": "vitest",
    "test:e2e": "vitest -c ./vitest-e2e.config.ts",
    "test:all": "npm run test && npm run test:e2e",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "dependencies": {
    "@fastify/static": "^6.5.0",
    "@nestjs/common": "9.0.11",
    "@nestjs/core": "9.0.11",
    "@nestjs/microservices": "9.0.11",
    "@nestjs/platform-fastify": "9.0.11",
    "@nestjs/schedule": "2.1.0",
    "@typegoose/typegoose": "9.11.2",
    "axios": "0.27.2",
    "axios-retry": "3.3.1",
    "cache-manager": "4.1.0",
    "cache-manager-ioredis": "2.1.0",
    "chalk": "5.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "consola": "2.15.3",
    "cron": "2.1.0",
    "dayjs": "1.11.5",
    "lodash-es": "4.17.21",
    "mongoose": "6.5.4",
    "mongoose-lean-id": "0.3.0",
    "mongoose-lean-virtuals": "0.9.1",
    "mongoose-paginate-v2": "1.7.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.6",
    "vm2": "3.9.11",
    "zx-cjs": "7.0.7-0"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/swagger": "6.1.1",
    "@nestjs/testing": "9.0.11",
    "@types/cache-manager-ioredis": "2.0.2",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.2",
    "@types/lodash-es": "4.17.6",
    "@types/node": "16.11.56",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "3.4.1",
    "husky": "7.0.4",
    "ioredis": "*",
    "jest": "29.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "source-map-support": "0.5.21",
    "supertest": "6.2.4",
    "ts-jest": "28.0.8",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.8.2",
    "webpack": "*",
    "xml2js": "0.4.23"
  },
  "resolutions": {
    "typescript": "4.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@cache/cache(|/.*)$": "<rootDir>/libs/cache/src/$1",
      "^@helper/helper(|/.*)$": "<rootDir>/libs/helper/src/$1"
    }
  }
}