{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "strictNullChecks": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": false,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "~": [
        "."
      ],
      "~/*": [
        "./*"
      ],
      "@shared/*": [
        "shared/*",
      ],
      "@libs/database": [
        "libs/database/src/"
      ],
      "@libs/database/*": [
        "libs/database/src/*"
      ],
      "@libs/cache": [
        "libs/cache/src"
      ],
      "@libs/cache/*": [
        "libs/cache/src/*"
      ],
      "@libs/helper": [
        "libs/helper/src"
      ],
      "@libs/helper/*": [
        "libs/helper/src/*"
      ],
      "@core": [
        "apps/core/src/"
      ],
      "@core/*": [
        "apps/core/src/*"
      ],
    }
  },
  "exclude": [
    "dist",
    "tmp"
  ]
}